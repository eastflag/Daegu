<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTimer"
                	android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="00:00" android:textSize="40sp" android:gravity="center" android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_below="@id/tvTimer" android:layout_alignRight="@id/tvTimer"
                    android:layout_marginRight="20dp"
                    android:text="경과시간" android:textSize="15sp" />
                <ImageButton 
                    android:id="@+id/ivHelp"
                    android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_marginRight="15dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:background="@drawable/help"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_below="@id/ivHelp" android:layout_alignRight="@id/ivHelp"
                    android:layout_marginRight="-5dp"
                    android:text="도움말" android:textSize="15sp" />
                <ImageButton 
                    android:id="@+id/ivRecord"
                    android:layout_toLeftOf="@id/ivHelp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp"
                    android:background="@drawable/stand"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_below="@id/ivRecord" android:layout_alignRight="@id/ivRecord"
                    android:layout_marginRight="10dp"
                    android:text="기록" android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                style="@style/Line"
                android:layout_marginTop="5dp" android:layout_marginBottom="10dp"/>
        </LinearLayout>
       
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">
        
        <RelativeLayout
	        android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"  >

	       <TextView 
	            android:id="@+id/answerTwo"
	            android:layout_centerInParent="true"
	            android:layout_width="45dp" android:layout_height="45dp"
	            android:text="@string/question"  android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
	       <TextView 
	            android:id="@+id/answerOne"
	            android:layout_toLeftOf="@id/answerTwo" android:layout_alignTop="@id/answerTwo" android:layout_marginRight="10dp"
	            android:layout_width="45dp" android:layout_height="45dp"
	            android:text="@string/question" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
	        <TextView 
	            android:id="@+id/answerThree"
	            android:layout_toRightOf="@id/answerTwo" android:layout_alignTop="@id/answerTwo" android:layout_marginLeft="10dp"
	            android:layout_width="45dp" android:layout_height="45dp"
	            android:text="@string/question"  android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
        </RelativeLayout>
        
        <LinearLayout
	        android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" 
	        android:orientation="vertical" >
        	<ListView 
        	    android:layout_width="match_parent" android:layout_height="wrap_content">
        	    
        	</ListView>
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="10dp" android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/Line"
            android:layout_marginBottom="10dp" />
        
        <RelativeLayout android:layout_width="wrap_content"	android:layout_height="wrap_content">
            <TextView 
                android:id="@+id/numberZero"
                android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="0" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
            <TextView 
                android:id="@+id/numberOne"
                android:layout_toRightOf="@id/numberZero" android:layout_marginLeft="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="1" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
            <TextView 
                android:id="@+id/numberTwo"
                android:layout_toRightOf="@id/numberOne" android:layout_marginLeft="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="2" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
            <TextView 
                android:id="@+id/numberThree"
                android:layout_toRightOf="@id/numberTwo" android:layout_marginLeft="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="3" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
            <TextView 
                android:id="@+id/numberFour"
                android:layout_toRightOf="@id/numberThree" android:layout_marginLeft="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="4" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
             <TextView 
                android:id="@+id/numberFive"
                android:layout_below="@id/numberZero" android:layout_marginTop="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="5" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
            <TextView 
                android:id="@+id/numberSix"
                android:layout_toRightOf="@id/numberFive" android:layout_alignTop="@id/numberFive" android:layout_marginLeft="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="6" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
            <TextView 
                android:id="@+id/numberSeven"
                android:layout_toRightOf="@id/numberSix" android:layout_alignTop="@id/numberSix" android:layout_marginLeft="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="7" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
            <TextView 
                android:id="@+id/numberEight"
                android:layout_toRightOf="@id/numberSeven" android:layout_alignTop="@id/numberSeven" android:layout_marginLeft="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="8" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
            <TextView 
                android:id="@+id/numberNine"
                android:layout_toRightOf="@id/numberEight" android:layout_alignTop="@id/numberEight" android:layout_marginLeft="10dp"
                android:layout_width="55dp" android:layout_height="55dp"
	            android:text="9" android:textSize="20sp" android:gravity="center" android:textStyle="bold"
	            android:background="@drawable/input" />
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center"
            android:padding="10dp">
            <Button 
                android:id="@+id/btnDelete" 
                android:layout_width="80dp" android:layout_height="40dp" android:layout_marginRight="10dp"
        	    android:background="@drawable/color_red" android:text="지우기"
                android:textColor="#ffffff" android:gravity="center" android:textSize="20dp" />
            <Button 
                android:id="@+id/btnSubmit" 
                android:layout_width="80dp" android:layout_height="40dp" android:layout_marginLeft="10dp"
        	    android:background="@drawable/color_red" android:text="완료"
                android:textColor="#ffffff" android:gravity="center" android:textSize="20dp" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
